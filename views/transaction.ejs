<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Table</title>

    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-4">
    <h1>Transaction Table</h1>
    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>Email</th>
                <th>Transaction ID</th>
                <th>Book Title</th>
                <th>Transaction Date</th>
                <th>Due Date</th>
                <th>Return Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <% transactions.forEach(transaction => { %>
                <tr>
                    <td><%= transaction.t_email %></td>
                    <td><%= transaction.t_id %></td>
                    <td><%= transaction.t_btitle %></td>
                    <td><%= transaction.t_date %></td>
                    <td><%= transaction.d_date %></td>
                    <td><%= transaction.t_returnDate %></td>
                    <td>
                        <% if (show && !transaction.t_returnDate) { %>
                            <a href="/returnBook/<%= transaction.t_id %>" class="btn btn-primary">Return Book</a>
                        <% } %>
                    </td>
                    
                </tr>
            <% }) %>
            <!-- Add more rows as needed -->
        </tbody>
    </table>
<a href="/" class="btn btn-primary">home page</a>

</div>


<!-- Include Bootstrap JS (optional, if you need Bootstrap JavaScript functionality) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
